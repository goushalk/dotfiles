##### General Settings #####
# Enable mouse support
set -g mouse on

# Force mouse selection → clipboard
bind -n MouseDragEnd1Pane \
  if -F '#{pane_in_mode}' \
  'send -X copy-pipe-and-cancel "wl-copy"' \
  'copy-pipe "wl-copy"'
# Use system clipboard (Wayland-safe)
set-option -g set-clipboard on

# Correct terminal
set -g default-terminal "tmux-256color"

# Start windows/panes at 1
set -g base-index 1
setw -g pane-base-index 1

##### Prefix #####
# Change prefix from Ctrl-b to Alt-s
set -g prefix C-a
unbind C-b
bind C-a send-prefix

##### Splits #####
unbind %
bind h split-window -h
unbind '"'
bind v split-window -v

##### Movement between panes #####
bind -r , select-pane -L
bind -r m select-pane -D
bind -r n select-pane -U
bind -r . select-pane -R

##### Copy Mode (VI-style, Wayland) #####
setw -g mode-keys vi

# Copy with y → Wayland clipboard
bind -T copy-mode-vi y send -X copy-pipe-and-cancel "wl-copy"

# Enter also copies
bind -T copy-mode-vi Enter send -X copy-pipe-and-cancel "wl-copy"

# Mouse drag copy (Wayland-safe)
bind -T copy-mode-vi MouseDragEnd1Pane send -X copy-pipe-and-cancel "wl-copy"

##### Misc #####
# Reload config
bind r source-file ~/.tmux.conf \; display-message "Config reloaded!"

##### Plugins #####
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'Nybkox/tmux-kanagawa'

##### tmux-yank (Wayland explicit, no guessing) #####
set -g @yank_selection 'clipboard'
set -g @yank_with_mouse on
set -g @yank_action 'wl-copy'

##### Theme Settings #####
set -g @kanagawa-theme 'dragon'
set -g @kanagawa-ignore-window-colors true
set -g @kanagawa-cpu-display-load true
set -g @kanagawa-show-battery-status true
set -g @kanagawa-git-disable-status true

##### Initialize TPM (keep last) #####
run '~/.tmux/plugins/tpm/tpm'

