[global]
monitor = 0
follow = keyboard

width = 320
height = (0, 300)

origin = top-right
offset = (20, 20)

notification_limit = 5

padding = 12
horizontal_padding = 12
text_icon_padding = 10
frame_width = 2
corner_radius = 10

font = 0xProto Nerd Font 10

idle_threshold = 120
show_age_threshold = 60
word_wrap = yes
ellipsize = middle

stack_duplicates = true
hide_duplicate_count = false

enable_recursive_icon_lookup = true
icon_position = left
icon_theme = Papirus-Dark
max_icon_size = 48

mouse_left_click = do_action
mouse_middle_click = close_current
mouse_right_click = close_all

[urgency_low]
timeout = 4
background = "#1e1e2e"
foreground = "#cdd6f4"
frame_color = "#313244"

[urgency_normal]
timeout = 6
background = "#1e1e2e"
foreground = "#cdd6f4"
frame_color = "#89b4fa"

[urgency_critical]
timeout = 0
background = "#1e1e2e"
foreground = "#f38ba8"
frame_color = "#f38ba8"

